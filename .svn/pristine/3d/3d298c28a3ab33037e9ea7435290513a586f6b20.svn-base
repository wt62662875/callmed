+(NSString*)hexStringFromData:(NSData *)data
{
    Byte *byte = (Byte*)data.bytes;
    NSString *result=@"";
    for (int i=0; i<data.length; i++)
    {
        NSString * temps = [NSString stringWithFormat:@"%x",byte[i]&0xff];
        
        if ([temps length]==1) {
            result = [NSString stringWithFormat:@"%@-%@",result,temps];
        }else{
            result = [NSString stringWithFormat:@"%@0x%@",result,temps];
        }
    }
    NSLog(@"toHex:%@",result);
    return nil;
}
